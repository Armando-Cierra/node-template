{
	"compilerOptions": {
		// File Layout
		"rootDir": "./src",
		"outDir": "./dist",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},

		// Environment Settings
		"module": "Preserve", //Keeps imports as described without trasnforming them.
		"moduleResolution": "bundler", //Uses pkgroll instead tsc.
		"noEmit": true, //Typescript only validates types but does not compile.
		"target": "esnext",
		"lib": ["esnext"],
		"types": ["node"],

		// Other Outputs
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,

		// Stricter Typechecking Options
		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": true,

		// Style Options
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,

		// Recommended Options
		"strict": true,
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"noUncheckedSideEffectImports": true,
		"moduleDetection": "force",
		"skipLibCheck": true
	}
}
